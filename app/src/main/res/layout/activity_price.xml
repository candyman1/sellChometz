<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_price"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:orientation="vertical"
    tools:context="com.example.android.sellchometz.Price">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/myId2"
            android:text="My Info"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:id="@+id/plac2"
            android:text="Places"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:id="@+id/more2"
            android:text="More Places"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:id="@+id/product2"
            android:text="Products"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="More Info"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="VALUE"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The chometz has an approximate value of: $"

            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/background_style"
            android:orientation="horizontal">
        <EditText
            android:layout_width="80dp"

            android:background="@null"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/value"

            android:inputType="number"/>


</LinearLayout>
        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/circle_style"
            android:id="@+id/hello"
            android:layout_marginLeft="20sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="\?"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="KEYS/ACCESS"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:textSize="20sp"
        android:text="I will be home the entire Pesach."/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keys"
            android:textSize="20sp"
            android:text="Keys/combination will be available locally (include car keys, if applicable): "/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cey"
        android:orientation="vertical"
        android:background="@drawable/background_style">
        <EditText
            android:id="@+id/keyNumber"
            android:hint="address"
            android:background="@null"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="4dp"
            android:layout_width="430dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/text_field_clear_btn"
            />
    </FrameLayout>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/combo"
        android:textSize="20sp"
        android:text="My combination is: "/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comboFrame"
        android:orientation="vertical"
        android:background="@drawable/background_style">
        <EditText
            android:id="@+id/combi"
            android:hint="combination"
            android:background="@null"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="4dp"
            android:layout_width="430dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/text_field_clear_btn"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="BEDIKAH"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:paddingRight="20sp"
        android:textStyle="italic" />
        <TextView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/circle_style"
            android:id="@+id/bob"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="\?"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/fullCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="I will be doing a bedikah on my entire premises."/>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <CheckBox
            android:id="@+id/exclude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="I would like to exclude the following area(s): "/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/excludeFrame"
        android:orientation="vertical"
        android:background="@drawable/background_style">
        <EditText
            android:id="@+id/lazy"

            android:background="@null"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="4dp"
            android:layout_width="430dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/text_field_clear_btn"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minimal"

            android:textSize="20sp"
            android:text="I will only be doing a minimal bedikah in the following places: "/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/miniFrame"
        android:orientation="vertical"
        android:background="@drawable/background_style">
        <EditText
            android:id="@+id/minPlaces"

            android:background="@null"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="4dp"
            android:layout_width="430dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/text_field_clear_btn"
            />
    </FrameLayout>

            <Button
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:background="@drawable/square_style"
    android:textSize="16sp"
    android:text="View contract"
                android:layout_marginTop="8dp"
    android:layout_gravity="center_horizontal"
                android:onClick="printDocument"
    android:id="@+id/next">
</Button>


        </LinearLayout>





